<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sentry.Xamarin.Sample.CustomControls.EditorValidation">
  <ContentView.Content>
      <StackLayout>
            <Editor x:Name="EntryInput"
                    AutoSize="TextChanges"/>
            <Label x:Name="ErrorLabel"
                   Text="This field is not valid."
                   TextColor="Red"
                   IsVisible="False"/>
      </StackLayout>
  </ContentView.Content>
</ContentView>