<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContribSentry.Sample.Disco">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"/>
            <Label Text="{Binding DiscoMissingBind}"/>
            <Button Text="Capture Message" Clicked="CaptureMessageClick"/>
            <Button Text="Handle Exception" Clicked="CaptureHandledClick"/>
            <Button Text="Unhandled Exception" Clicked="CaptureUnhandledClick"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>